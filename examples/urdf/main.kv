<BaseBox>
    control_box: control_box
    renderer_box: renderer_box
    BoxLayout
        id: renderer_box
    BoxLayout
        id: control_box
        size_hint_x: None
        width: 200
        orientation: 'vertical'

<Label>
    size_hint_y: None
    height: 25

<Slider>
    size_hint_y: None
    height: 25
    min: 0
    max: 360

<JointControl>
    orientation: 'vertical'
    size_hint_x: None
    width: 200
    Label
        text: root.name
    BoxLayout
        size_hint_y: None
        height: 25
        Slider
            on_value: root.value = self.value
            value: root.value
            min: root.min
            max: root.max
        TextInput
            size_hint_x: 0.4
            text: '{:.2f}'.format(root.value)
            on_focus: if not self.focus: root.value = float(self.text)
            input_filter: 'float'
            multiline: False
            write_tab: False
            padding: 5,4,0,0

